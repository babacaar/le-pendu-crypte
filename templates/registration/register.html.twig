{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/register.css') }}">
{% endblock %}

{% block title %}Créer un compte - Le Pendu Crypté
{% endblock %}

{% block meta_description %}
	Inscrivez-vous pour jouer à Le Pendu Crypté, suivre votre progression, débloquer des niveaux et personnaliser votre profil.
{% endblock %}

{% block og_title %}Inscription - Le Pendu Crypté
{% endblock %}
{% block og_description %}
	Rejoignez la communauté et commencez à décrypter des mots tout en vous amusant. Créez votre compte dès maintenant !
{% endblock %}


{% block body %}
	<div class="register">
		{% include "fragments/_flash_message.html.twig" %}
		<a href="{{ path('app_home') }}" class="btn btn-secondary mb-3">⬅ Retour à l’accueil</a>
		<h1 class="register-title">Créer un compte</h1>

		{{ form_start(registrationForm, {'attr': {'class': 'register-form', 'enctype': 'multipart/form-data'}}) }}

		<div class="form-group">
			{{ form_label(registrationForm.firstname, 'Prénom') }}
			{{ form_widget(registrationForm.firstname) }}
			{{ form_errors(registrationForm.firstname) }}
		</div>

		<div class="form-group">
			{{ form_label(registrationForm.lastname, 'Nom') }}
			{{ form_widget(registrationForm.lastname) }}
			{{ form_errors(registrationForm.lastname) }}
		</div>

		<div class="form-group">
			{{ form_label(registrationForm.pseudo, 'Pseudo') }}
			{{ form_widget(registrationForm.pseudo) }}
			{{ form_errors(registrationForm.pseudo) }}
		</div>

		<div class="form-group">
			{{ form_label(registrationForm.email, 'Adresse e-mail') }}
			{{ form_widget(registrationForm.email) }}
			{{ form_errors(registrationForm.email) }}
		</div>

		<div class="form-group">
			{{ form_label(registrationForm.birthday, 'Date de naissance') }}
			{{ form_widget(registrationForm.birthday) }}
			{{ form_errors(registrationForm.birthday) }}
		</div>
		<div class="form-group">
			{{ form_row(registrationForm.plainPassword) }}
		</div>
		<div class="form-group consent-group">
			{{ form_row(registrationForm.consent) }}
		</div>
		<button type="submit" class="btn btn-register">S'inscrire</button>

		{{ form_end(registrationForm) }}
	</div>

{% endblock %}
