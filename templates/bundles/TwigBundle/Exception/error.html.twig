{% extends "base.html.twig" %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/error.css') }}">
{% endblock %}

{% block title %}Page d'erreur
	{{ status_code }}
{% endblock %}

{% block body %}
	{% include "fragments/_nav.html.twig" %}

	<div class="container-error">
		<h1>OOPS erreur
			{{ status_code }}
			:
			{{ status_text }}</h1>

		{% if status_code == 404 %}
			<p>La page que vous cherchez n'existe pas ou a été supprimée.</p>
		{% elseif status_code == 403 %}
			<p>Vous n'avez pas les droits nécessaires pour accéder à cette page.</p>
		{% else %}
			<p>Une erreur inattendue s'est produite. Veuillez réessayer plus tard.</p>
		{% endif %}

		<a href="{{ path('app_home') }}">← Retour à l'accueil</a>
	</div>
{% endblock %}
