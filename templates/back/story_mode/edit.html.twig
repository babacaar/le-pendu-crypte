	{% include "/fragments/_flash_message.html.twig" %}

	<div class="container story-mode-edit">
		<div class="card shadow-lg">
			<div class="card-header bg-primary text-white text-center">
				<h2>✏️ Modifier l'Histoire</h2>
			</div>
			<div class="card-body">
				{{ include('back/story_mode/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
			</div>
		</div>

		<div class="text-center mt-3">
			<a class="btn btn-secondary" href="{{ path('app_story_mode_index') }}">
				⬅️ Retour à la liste
			</a>
		</div>

		<div class="text-center mt-3">
			{{ include('back/story_mode/_delete_form.html.twig') }}
